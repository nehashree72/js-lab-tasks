  <h1>Task 2: Loop Control Practice</h1>
  <p>Open the console to see loop outputs.</p>

<script>
console.log("=== while loop: print numbers 1 to 10 ===");
let i = 1;
while (i <= 10) {
  console.log(i);
  i++;
}

console.log("\n=== do-while loop: prompt until correct input ===");
let userInput;
let correctPassword = "abc123";
let attempts = 0;
do {
  userInput = attempts === 2 ? "abc123" : "wrong"; 
  console.log("Attempt:", attempts + 1, "Input:", userInput);
  attempts++;
} while (userInput !== correctPassword && attempts < 3);
console.log(userInput === correctPassword ? "Access granted!" : "Access denied!");

console.log("\n=== for loop: sum of first N natural numbers ===");
let N = 5;
let sum = 0;
for (let j = 1; j <= N; j++) {
  sum += j;
}
console.log("Sum of first", N, "natural numbers =", sum);

console.log("\n=== Nested for loop: multiplication table (1 to 5) ===");
for (let row = 1; row <= 5; row++) {
  let line = "";
  for (let col = 1; col <= 5; col++) {
    line += (row * col) + "\t";
  }
  console.log(line);
}
</script>
