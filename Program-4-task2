<!DOCTYPE html>
<html>
<head>
  <title>Task 2: Validate Email</title>
</head>
<body>

<h2>Task 2: Validate Email Field</h2>

<input type="text" id="emailInput" placeholder="Enter your email">
<button onclick="validateEmail()">Validate Email</button>

<p id="emailOutput"></p>

<script>
  function validateEmail() {
    const email = document.getElementById("emailInput").value.trim();
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (emailRegex.test(email)) {
      document.getElementById("emailOutput").textContent = `${email} is valid.`;
    } else {
      document.getElementById("emailOutput").textContent = "Invalid email format.";
    }
  }
</script>

</body>
</html>
